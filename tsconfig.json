{
    "compilerOptions": {
      "target": "es2020",                     // Define o alvo da versão ECMAScript para o código gerado
      "module": "commonjs",                   // Define o sistema de módulos JavaScript
      "lib": ["es2020"],                      // Define as bibliotecas de tipagem do JavaScript a serem incluídas
      "outDir": "./dist",                     // Diretório de saída para os arquivos compilados
      "rootDir": "./src",                     // Diretório raiz contendo os arquivos TypeScript
      "strict": true,                         // Ativa todas as opções estritas de tipo
      "esModuleInterop": true,                // Permite a interoperabilidade de módulos ES6 com módulos CommonJS/AMD
      "skipLibCheck": true,                   // Pula a checagem de tipos dos arquivos de declaração
      "forceConsistentCasingInFileNames": true, // Não permite inconsistência na caixa das letras dos nomes de arquivo
      "resolveJsonModule": true,              // Permite importação de arquivos .json
      "moduleResolution": "node",             // Estratégia de resolução de módulos
      "sourceMap": true                       // Gera mapas de origem para os arquivos .ts, útil para debugging
    },
    "include": [
      "src/**/*.ts"                           // Inclui todos os arquivos TypeScript no diretório src e subdiretórios
    ],
    "exclude": [
      "node_modules",                         // Exclui a pasta node_modules
      "**/*.test.ts"                          // Exclui arquivos de teste TypeScript
    ]
  }
  